{
  "name": "vfiles",
  "version": "1.1.3",
  "description": "基于Web的Git文件管理系统",
  "type": "module",
  "scripts": {
    "dev": "bun --watch server/src/index.ts",
    "dev:client": "cd client && bun run dev",
    "build": "cd client && bun run build",
    "compile": "bun build --compile server/src/index.ts --minify --sourcemap=none --outfile dist/vfiles",
    "package": "bun run scripts/package.ts",
    "start": "bun server/src/index.ts",
    "lint": "eslint .",
    "fmt": "prettier --write .",
    "test": "bun test",
    "test:unit": "vitest",
    "test:unit:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "start:e2e": "bun run build && NODE_ENV=production PORT=3000 bun run start"
  },
  "keywords": [
    "git",
    "file-manager",
    "vue3",
    "bulma"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "fflate": "^0.8.2",
    "hono": "^4.11.3",
    "nodemailer": "^7.0.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@happy-dom/global-registrator": "^20.0.11",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/vue": "^8.1.0",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vue/test-utils": "^2.4.6",
    "bun-types": "^1.3.5",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.6.2",
    "globals": "^17.0.0",
    "jsdom": "^27.4.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "vue-eslint-parser": "^10.2.0"
  }
}
